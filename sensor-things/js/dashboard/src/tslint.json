{
    "extends": "../tslint.json",
    "rules": {
        "quotemark": false,
        "no-trailing-whitespace": [
            true,
            "ignore-template-strings",
            "ignore-comments",
            "ignore-jsdoc"
        ],
        "no-unused-expression": [
            true,
            "allow-fast-null-checks",
            "allow-new",
            "allow-tagged-template"
        ],
        "variable-name": {
            "options": [
                "check-format",
                "allow-leading-underscore"
            ]
        }
    }
}